---
import MainLayout from '../layouts/MainLayout.astro';
const title = 'Projects'
const items = await Astro.glob('../pages/posts/*.md');
---

<MainLayout title={title}>
	<main>
		<h1>{title}</h1>
		<p>A list of projects that I have done so far.</p>
		{items.map(item => (
			<item.Content/>
			))}
			</main>
</MainLayout>

<style>
	main {
		margin: 1rem;
		padding: 20px 50px;
	}
	h1{
		color: #0ef;
		margin-top: 10%;
	}
	p{
		color: azure;
		font-size: large;
		font-weight: 550;
		padding: 0px 20px;
	}
	
	@media (max-width: 600px) {
		main {
			padding: 20px 10px;
		}
	}
</style>
